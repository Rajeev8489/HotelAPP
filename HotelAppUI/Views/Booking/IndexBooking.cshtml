@model IEnumerable<HotelAppUI.Models.BookingDTO>
@{
	ViewData["Title"] = "Booking List";
}

<h1>Booking List</h1>
<p>
	<a asp-controller="Booking" asp-action="Create" class="btn btn-success">Create New Booking</a>
</p>
<table class="table table-bordered table-striped">
	<thead class=" table-dark">
		<tr>
			<th>Booking ID</th>
			<th>Customer Name</th>
			<th>Room Number</th>
			<th>Address</th>
			<th>Phone Number</th>
			<th>City</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.BookingId</td>
				<td>@item.CustomerName</td>
				<td>@item.RoomId</td>
				<td>@item.Address</td>
				
				<td>@item.City</td>
				<td>
					<a asp-action="EditBooking" asp-route-id="@item.BookingId" class="btn btn-sm btn-primary">Edit</a>
					<a asp-action="DeleteBooking" asp-route-id="@item.BookingId" class="btn btn-sm btn-danger">Delete</a>
				</td>
			</tr>
}
	</tbody>
</table>
