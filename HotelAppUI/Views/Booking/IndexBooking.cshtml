@model IEnumerable<HotelAppUI.Models.BookingDTO>
@{
	ViewData["Title"] = "Booking List";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Booking List</h1>
    <a asp-controller="Booking" asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus me-2"></i> Create New Booking
    </a>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Booking ID</th>
                            <th>Customer Name</th>
                            <th>Room Number</th>
                            <th>Address</th>
                            <th>Phone Number</th>
                            <th>City</th>
                            <th>Total Price</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BookingId</td>
                                <td>@item.CustomerName</td>
                                <td>@item.RoomId</td>
                                <td>@item.Address</td>
                                <td>@item.PhoneNumber.ToString("###-###-####")</td>
                                <td>@item.City</td>
                                <td>@item.TotalPrice.ToString("C")</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditBooking" asp-route-id="@item.BookingId" 
                                           class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="DeleteBooking" asp-route-id="@item.BookingId" 
                                           class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
        <h3 class="text-muted">No Bookings Found</h3>
        <p class="text-muted">Start by creating your first booking.</p>
        <a asp-controller="Booking" asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-2"></i> Create New Booking
        </a>
    </div>
}
