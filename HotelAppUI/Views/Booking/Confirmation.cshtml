@model HotelAppUI.Models.BookingDTO
@{
    ViewData["Title"] = "Booking Confirmed";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card card-elevated text-center">
            <div class="card-body py-5 px-5">
                <div class="rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px; background-color: var(--color-success-light);">
                    <i class="fas fa-check fa-3x" style="color: var(--color-success);"></i>
                </div>
                <h1 class="h3 mb-2" style="color: var(--color-secondary);">Booking Confirmed</h1>
                <p class="text-muted mb-5">Thank you. Your reservation has been confirmed.</p>

                <div class="text-start mb-5">
                    <div class="d-flex justify-content-between py-2 border-bottom" style="border-color: var(--border-color) !important;">
                        <span class="text-muted">Booking #</span>
                        <strong>@Model.BookingId</strong>
                    </div>
                    <div class="d-flex justify-content-between py-2 border-bottom" style="border-color: var(--border-color) !important;">
                        <span class="text-muted">Guest</span>
                        <strong>@Model.CustomerName</strong>
                    </div>
                    <div class="d-flex justify-content-between py-2 border-bottom" style="border-color: var(--border-color) !important;">
                        <span class="text-muted">Room</span>
                        <span class="badge badge-gold">Room @Model.RoomId</span>
                    </div>
                    <div class="d-flex justify-content-between py-2 border-bottom" style="border-color: var(--border-color) !important;">
                        <span class="text-muted">City</span>
                        <strong>@Model.City</strong>
                    </div>
                    <div class="d-flex justify-content-between py-2">
                        <span class="text-muted">Total</span>
                        <strong style="color: var(--color-success); font-size: var(--font-size-lg);">@Model.TotalPrice.ToString("C")</strong>
                    </div>
                </div>

                <div class="d-flex flex-column flex-sm-row gap-2 justify-content-center">
                    <a asp-action="EditBooking" asp-route-id="@Model.BookingId" class="btn btn-accent">
                        <i class="fas fa-edit me-2"></i>View / Edit Booking
                    </a>
                    <a asp-action="IndexBooking" class="btn btn-outline-primary">
                        <i class="fas fa-list me-2"></i>All Bookings
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
