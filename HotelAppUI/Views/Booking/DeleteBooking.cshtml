@model HotelAppUI.Models.BookingDTO
@{
    ViewData["Title"] = "Delete Booking";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card card-elevated">
            <div class="card-header bg-danger text-white">
                <h2 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]
                </h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this booking? This action cannot be undone.
                </div>

                <form asp-controller="Booking" asp-action="DeleteBooking" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="BookingId" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Customer Name</label>
                                <p class="form-control-plaintext">@Model.CustomerName</p>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Room Number</label>
                                <p class="form-control-plaintext">
                                    <span class="badge badge-gold">Room @Model.RoomId</span>
                                </p>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Phone Number</label>
                                <p class="form-control-plaintext">@Model.PhoneNumber.ToString("(###) ###-####")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Address</label>
                                <p class="form-control-plaintext">@Model.Address</p>
                            </div>
                            <div class="form-group">
                                <label class="form-label">City</label>
                                <p class="form-control-plaintext">@Model.City</p>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Total Price</label>
                                <p class="form-control-plaintext">
                                    <strong class="text-success" style="font-size: var(--font-size-lg);">
                                        @Model.TotalPrice.ToString("C")
                                    </strong>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete Booking
                        </button>
                        <a asp-action="IndexBooking" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
