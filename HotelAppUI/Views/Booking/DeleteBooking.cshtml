@model HotelAppUI.Models.BookingDTO
@{
	ViewData["Title"] = "Delete Booking";
}

<div class="row">
	<div class="col-md-8">
		<div class="card">
			<div class="card-header bg-danger text-white">
				<h1 class="card-title mb-0">
					<i class="fas fa-exclamation-triangle"></i> @ViewData["Title"]
				</h1>
			</div>
			<div class="card-body">
				<div class="alert alert-warning">
					<i class="fas fa-exclamation-triangle me-2"></i>
					<strong>Warning!</strong> Are you sure you want to delete this booking? This action cannot be undone.
				</div>

				<form asp-controller="Booking" asp-action="DeleteBooking" method="post">
					@Html.AntiForgeryToken()
					<input type="hidden" asp-for="BookingId" />
					
					<div class="row">
						<div class="col-md-6">
							<div class="mb-3">
								<label class="form-label fw-bold">Customer Name:</label>
								<p class="form-control-plaintext">@Model.CustomerName</p>
							</div>
							<div class="mb-3">
								<label class="form-label fw-bold">Room Number:</label>
								<p class="form-control-plaintext">@Model.RoomId</p>
							</div>
							<div class="mb-3">
								<label class="form-label fw-bold">Phone Number:</label>
								<p class="form-control-plaintext">@Model.PhoneNumber.ToString("(###) ###-####")</p>
							</div>
						</div>
						<div class="col-md-6">
							<div class="mb-3">
								<label class="form-label fw-bold">Address:</label>
								<p class="form-control-plaintext">@Model.Address</p>
							</div>
							<div class="mb-3">
								<label class="form-label fw-bold">City:</label>
								<p class="form-control-plaintext">@Model.City</p>
							</div>
							<div class="mb-3">
								<label class="form-label fw-bold">Total Price:</label>
								<p class="form-control-plaintext">@Model.TotalPrice.ToString("C")</p>
							</div>
						</div>
					</div>

					<div class="d-flex gap-2 mt-4">
						<button type="submit" class="btn btn-danger">
							<i class="fas fa-trash me-2"></i> Delete Booking
						</button>
						<a asp-action="IndexBooking" class="btn btn-secondary">
							<i class="fas fa-times me-2"></i> Cancel
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
