@model HotelAppUI.Models.BookingDTO
@{
    ViewData["Title"] = "Create Booking";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card card-elevated">
            <div class="card-header">
                <h2 class="card-title mb-0" style="color: var(--color-secondary);">
                    <i class="fas fa-plus-circle me-2" style="color: var(--color-accent);"></i>@ViewData["Title"]
                </h2>
            </div>
            <div class="card-body">
                <form asp-controller="Booking" asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    @await Html.PartialAsync("_BookingForm", Model)
                    
                    <div class="action-buttons">
                        <button type="submit" class="btn btn-accent">
                            <i class="fas fa-save me-2"></i>Create Booking
                        </button>
                        <a asp-action="IndexBooking" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
