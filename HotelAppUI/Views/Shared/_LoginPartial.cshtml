@{
    var displayName = User?.Identity?.Name ?? "Account";
    var initial = !string.IsNullOrWhiteSpace(displayName) ? displayName.Trim()[0].ToString().ToUpperInvariant() : "A";
}

<ul class="navbar-nav ms-auto align-items-lg-center">
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle d-flex align-items-center gap-3" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="avatar" aria-hidden="true">@initial</span>
            <span class="d-none d-lg-inline">@displayName</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end">
            <li>
                <button type="button" class="dropdown-item" id="themeToggle">
                    <i class="fas fa-sun me-2"></i><span>Toggle dark mode</span>
                </button>
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li>
                <form asp-controller="Auth" asp-action="Logout" method="post" class="px-2">
                    <button type="submit" class="dropdown-item text-danger">
                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                    </button>
                </form>
            </li>
        </ul>
    </li>
</ul>



